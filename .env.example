# Suptia Environment Variables Template

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_READ_TOKEN=your_sanity_read_token
SANITY_API_WRITE_TOKEN=your_sanity_write_token

# Rakuten API Configuration
RAKUTEN_APPLICATION_ID=your_rakuten_application_id
RAKUTEN_AFFILIATE_ID=your_rakuten_affiliate_id

# Yahoo! Shopping API Configuration
YAHOO_CLIENT_ID=your_yahoo_client_id
YAHOO_CLIENT_SECRET=your_yahoo_client_secret

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_SALT=your_rate_limit_salt_for_ip_hashing

# Database Configuration (if needed)
DATABASE_URL=your_database_url

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Analytics Configuration (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_PRICE_ALERTS=false
NEXT_PUBLIC_ENABLE_FAVORITES=false