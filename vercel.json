{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "pnpm --filter @suptia/web build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install",

  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}