{
  "mcpServers": {
    "sanity-dev": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io/developer",
        "--transport",
        "http-first"
      ],
      "disabled": false,
      "autoApprove": [],
      "allowedDomains": ["sanity.io", "*.sanity.io"]
    }
  },
  "security": {
    "allowedDomains": [
      "*.sanity.io",
      "*.suptia.com",
      "localhost",
      "127.0.0.1"
    ],
    "requireConfirmation": [
      "create_document",
      "update_document",
      "delete_document",
      "git_commit",
      "git_push"
    ]
  }
}