{
  "mcpServers": {
    "sanity-dev": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io/developer",
        "--transport",
        "http-first"
      ],
      "disabled": false,
      "autoApprove": []
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_ここにPAT"
      },
      "disabled": false,
      "autoApprove": []
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/ryota/suptia-kiro"
      ],
      "disabled": false,
      "autoApprove": [
        "*",
        "read_text_file"
      ]
    },
    "web-search": {
      "command": "uvx",
      "args": [
        "mcp-web-search@0.1.0"
      ],
      "disabled": true,
      "autoApprove": [
        "search",
        "web_search",
        "search_with_sources",
        "get_page_content"
      ]
    },
    "brave-search": {
      "command": "uvx",
      "args": [
        "mcp-brave-search@latest"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "search",
        "web_search",
        "news_search",
        "brave_web_search"
      ]
    },
    "vercel-mcp": {
      "_comment": "Vercel REST API連携専用の軽量MCP",
      "_comment_use_case": "デプロイメント監視、プロジェクト管理、ドメイン設定、環境変数管理",
      "_comment_features": "listDeployments, getDeployment, getProject, listDomains, addDomain, envList, envSet",
      "_baseUrl": "https://api.vercel.com",
      "_auto_approve_rationale": "読み取り系は自動承認、書き込み系（addDomain/envSet）は手動承認必須",
      "_status": "一時的に無効化 - mcp-vercel-api@latestパッケージが存在しないため",
      "_alternative": "fetchサーバーは使用不可（robots.txt制限）、カスタムMCPサーバー実装が必要",
      "command": "uvx",
      "args": [
        "mcp-vercel-api@latest"
      ],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      },
      "disabled": true,
      "autoApprove": [
        "listDeployments",
        "getDeployment", 
        "getProject",
        "listDomains",
        "envList"
      ]
    },
    "database": {
      "command": "uvx",
      "args": [
        "mcp-database@latest"
      ],
      "disabled": true,
      "autoApprove": []
    }
  }
}