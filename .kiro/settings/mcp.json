{
  "mcpServers": {
    "sanity-dev": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io/developer",
        "--transport",
        "http-first"
      ],
      "disabled": false,
      "autoApprove": []
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_ここにPAT"
      },
      "disabled": false,
      "autoApprove": [
        "list_workflow_runs",
        "get_job_logs",
        "get_workflow_run",
        "list_workflow_jobs",
        "rerun_workflow_run",
        "run_workflow",
        "list_issues"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/ryota/suptia-kiro"
      ],
      "disabled": false,
      "autoApprove": [
        "*",
        "read_text_file"
      ]
    },
    "web-search": {
      "command": "uvx",
      "args": [
        "mcp-web-search@0.1.0"
      ],
      "disabled": true,
      "autoApprove": [
        "search",
        "web_search",
        "search_with_sources",
        "get_page_content"
      ]
    },
    "brave-search": {
      "command": "uvx",
      "args": [
        "mcp-brave-search@latest"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "search",
        "web_search",
        "news_search",
        "brave_web_search"
      ]
    },
    "vercel-mcp": {
      "command": "uvx",
      "args": [
        "mcp-vercel-api@latest"
      ],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      },
      "disabled": false,
      "autoApprove": [
        "listDeployments",
        "getDeployment",
        "getProject",
        "listDomains",
        "envList"
      ]
    },
    "database": {
      "command": "uvx",
      "args": [
        "mcp-database@latest"
      ],
      "disabled": true,
      "autoApprove": []
    }
  }
}