{
  "mcpServers": {
    "sanity-dev": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io/developer",
        "--transport",
        "http-first"
      ],
      "disabled": false,
      "autoApprove": []
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "disabled": false,
      "autoApprove": [
        "list_workflow_runs",
        "get_job_logs",
        "get_workflow_run",
        "list_workflow_jobs",
        "rerun_workflow_run",
        "run_workflow",
        "list_issues",
        "get_file_contents",
        "search_repositories"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/ryota/suptia-kiro"
      ],
      "disabled": false,
      "autoApprove": [
        "*",
        "read_text_file"
      ]
    },
    "brave-search": {
      "command": "uvx",
      "args": [
        "mcp-brave-search@latest"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "search",
        "web_search",
        "news_search",
        "brave_web_search"
      ]
    },
    "database": {
      "command": "uvx",
      "args": [
        "mcp-database@latest"
      ],
      "disabled": true,
      "autoApprove": []
    }
  }
}