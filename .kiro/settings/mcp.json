{
  "mcpServers": {
    "sanity-dev": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io/developer",
        "--transport",
        "http-first"
      ],
      "disabled": false,
      "autoApprove": [],
      "allowedDomains": ["sanity.io", "*.sanity.io"]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_ここにPAT"
      },
      "disabled": false,
      "autoApprove": []
    }
  },
  "security": {
    "allowedDomains": [
      "*.sanity.io",
      "*.suptia.com",
      "localhost",
      "127.0.0.1"
    ],
    "requireConfirmation": [
      "create_document",
      "update_document",
      "delete_document",
      "git_commit",
      "git_push"
    ]
  }
}