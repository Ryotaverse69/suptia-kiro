{
  "name": "suptia-kiro",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "start": "cd apps/web && npm run start",
    "lint": "cd apps/web && npm run lint",
    "format": "cd apps/web && npm run format",
    "test": "cd apps/web && npm run test",
    "test:watch": "cd apps/web && npm run test:watch",
    "typecheck": "pnpm -C apps/web typecheck",
    "type-check": "pnpm -C apps/web typecheck",
    "env:check": "node scripts/check-env-sync.mjs",
    "env:check:ci": "CI=true node scripts/check-env-sync.mjs",
    "preview:verify": "node scripts/verify-preview-env.mjs",
    "preview:url": "node scripts/get-preview-url.mjs",
    "preview:test": "node scripts/test-preview-workflow.mjs",
    "deploy:monitor": "node scripts/monitor-production-deployment.mjs",
    "deploy:rollback": "node scripts/rollback-production.mjs",
    "deploy:notify": "node scripts/notify-deployment.mjs",
    "deploy:test": "node scripts/test-production-deployment.mjs",
    "sitemap": "next-sitemap",
    "precommit": "npm run format && npm run lint && npm run test && npm run env:check",
    "commit:metrics": "node scripts/show-commit-metrics.mjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@lhci/cli": "^0.15.1",
    "@sanity/client": "^7.8.2",
    "@sanity/vision": "^4.3.0",
    "groq": "^4.3.0",
    "next-sitemap": "^4.2.3",
    "sanity": "^3.99.0",
    "zod": "^4.0.17"
  }
}
